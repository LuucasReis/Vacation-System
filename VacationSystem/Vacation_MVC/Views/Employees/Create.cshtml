@model EmployeeCreateDTO
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Solicitar Férias</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow" />
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Salary" class="form-control border-0 shadow" />
                    <label asp-for="Salary" class="ms-2"></label>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="entryDate" class="form-control border-0 shadow" />
                    <label asp-for="entryDate" class="ms-2"></label>
                    <span asp-validation-for="entryDate" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Occupancy" class="form-control border-0 shadow" />
                    <label asp-for="Occupancy" class="ms-2"></label>
                    <span asp-validation-for="Occupancy" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Regime" class="form-control border-0 shadow" />
                    <label asp-for="Regime" class="ms-2"></label>
                    <span asp-validation-for="Regime" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="leaveDate" class="form-control border-0 shadow" />
                    <label asp-for="leaveDate" class="ms-2"></label>
                    <span asp-validation-for="leaveDate" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="vacationDays" class="form-control border-0 shadow" />
                    <label asp-for="vacationDays" class="ms-2"></label>
                    <span asp-validation-for="vacationDays" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Solicitar</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Vacation" asp-action="MyDetails" class="btn btn-secondary border  form-control">
                            Voltar
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>