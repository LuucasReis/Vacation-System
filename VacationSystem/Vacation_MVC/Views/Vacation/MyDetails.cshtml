@model MyDetailsDTO

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Minhas Férias</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Vacation" asp-action="RequestVacation" asp-route-id="@Model.employeeId" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Solicitar Férias
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Periodo
                    </th>
                    <th>
                        Dias Elegíveis
                    </th>
                    <th>
                        Dias Restantes
                    </th>
                    <th>
                        Dias de acordo
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Period</td>
                    <td>
                        @Model.EligibleDays
                    </td>
                    <td>@Model.restantDays</td>
                    <td>@Model.combinedDays</td>
                    <td>@Model.Status</td>
                </tr>

            </tbody>
        </table>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Vacation" asp-action="MyVacations" asp-route-id="@Model.employeeId" class="btn btn-primary">
                        Visualizar Todos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>